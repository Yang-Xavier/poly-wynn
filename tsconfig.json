{
    "compilerOptions": {
      "target": "ES2020",                     // 设置目标 JavaScript 版本
      "module": "CommonJS",                   // 使用 CommonJS 模块
      "esModuleInterop": true,                // 启用 ES 模块互操作
      "skipLibCheck": true,
      "baseUrl": "./",           // 源文件目录
      "paths": {
        "@utils/*": ["src/utils/*"],
        "@constants/*": ["src/constants/*"],
      }
    },
    "include": ["src/**/*"]
  }